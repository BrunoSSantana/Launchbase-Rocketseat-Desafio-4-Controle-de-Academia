<div class="item">
    <div>Avatar URL</div>
        <div>
            <input 
            type="url" 
            name="avatar_url" 
            placeholder="http://"
            value="{{instructor.avatar_url}}"
            >
        </div>
    </div>

    <div class="item">
        <div>Nome Completo</div>
        <div>
            <input 
            type="text" 
            name="name"
            placeholder="Seu Nome"
            value="{{instructor.name}}"
            >
        </div>
    </div>

    <div class="item">
        <div>Data de Nascimento</div>
        <div>
            <input 
            type="date"
            name="birth"
            value="{{instructor.birth}}"
            >
        </div>
    </div>

    <div class="item">
        <div>Grau de Escolaridade</div>
        <div>
            <select name="grau_de_escolaridade" >
                <option 
                    value="esi"
                    {% if instructor.grau_de_escolaridade == "esi" %}
                    selected
                    {% endif %}
                >Ensino Superior Incompleto</option>
                <option 
                    value="esc"
                    {% if instructor.grau_de_escolaridade == "esc" %}
                    selected
                    {% endif %}
                    >Ensino Superior Completo</option>
                <option
                    value="m"
                    {% if instructor.grau_de_escolaridade == "m" %}
                    selected
                    {% endif %}
                    >Mestrado</option>
                <option 
                    value="d"
                    {% if instructor.grau_de_escolaridade == "d" %}
                    selected
                    {% endif %}
                    >Doutorado</option>
            </select>
        </div>
    </div>

    <div class="item">
        <div>Tipo de aula</div>
        <div>
            <span><input 
            type="radio" 
            name="tipo_de_aula" 
            value="P"
            {% if instructor.tipo_de_aula == "P" %}
            checked
            {% endif %}
            >Presencial</span>
            <span><input 
            type="radio" 
            name="tipo_de_aula" 
            value="D"
            {% if instructor.tipo_de_aula == "D" %}
            checked
            {% endif %}
            >Distância</span>
        </div>
    </div>

    <div class="item">
        <div>Área de Atuação</div>
        <div>
            <input type="text"
            name="area_de_atuacao"
            placeholder="Ex.: Musculação, Crosfit"
            value="{{instructor.area_de_atuacao}}"
            >

        </div>
    </div>

    <button type="submit">Salvar</button>