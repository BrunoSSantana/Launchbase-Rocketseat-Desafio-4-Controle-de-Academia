{% extends 'layout.njk' %}

{% block content %}

    <div class="card table-container">
        
        <table width="100%">
            <thead>
                <tr>
                    <th>Instructor</th>
                    <th>Atendimento</th>
                    <th>Ação</th>
                </tr>
            </thead>
            <tbody>
                {% for instructor in instructors %}
                    <tr>
                        <td><span style="background-image: url({{instructor.avatar_url}})" ></span></td>
                        <td>{{instructor.name}}</td>
                        <td>{{instructor.area_de_atuacao}}</td>
                        <td><a href="/instructors/{{instructor.id}}">ir</a></td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="/instructors/create">Novo</a>
    </div>
    
{% endblock content %}