{% extends 'layout.njk' %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{teacher.avatar_url}}) no-repeat center center / cover" >
        </section>
        
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Instrutor</div>
                <div>{{teacher.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{teacher.age}}</div>
            </div>

            <div class="item">
                <div>Grau de Escolaridade</div>
                <div>{{teacher.grau_de_escolaridade}}</div>
            </div>

            <div class="item">
                <div>Tipo de aula</div>
                <div>{{"Presencial" if teacher.tipo_de_aula == "P" else "Dist√¢ncia"}}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                    <div class="services">
                        {% for service in teacher.area_de_atuacao %}
                            <span>{{service}}</span>
                        {% endfor %}
                    </div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{teacher.age}}</div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{teacher.create_at}}</div>
            </div>

            <a class="button" href="#">Editar</a>

        </section>
    </div>
{% endblock content %}