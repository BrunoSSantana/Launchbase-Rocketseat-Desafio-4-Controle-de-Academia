{% extends 'layout.njk' %}

{% block content %}
    <div class="card">
        <section class="avatar" style="background: url({{student.avatar_url}}) no-repeat center center / cover" >
        </section>
        
        <section class="details">
            <h3>Detalhes</h3>

            <div class="item">
                <div>Estudante</div>
                <div>{{student.name}}</div>
            </div>

            <div class="item">
                <div>Idade</div>
                <div>{{student.age}}</div>
            </div>

            <div class="item">
                <div>Ano Escolar</div>
                <div>{{student.ano_escolar}}</div>
            </div>

            <div class="item">
                <div>E-mail</div>
                <div>{{student.email}}</div>
            </div>

            <div class="item">
                <div>Acompanhamento</div>
                <div>{{student.carga_horaria}}</div>
            </div>

            <div class="item">
                <div>Desde</div>
                <div>{{student.create_at}}</div>
            </div>

            <a class="button" href="/students/{{student.id}}/edit">Editar</a>

        </section>
        
    </div>
{% endblock content %}